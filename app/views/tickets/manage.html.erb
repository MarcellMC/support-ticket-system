<h1>Manage View</h1>

<div class="container ml-4 mr-4">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Ticket ID</th>
        <th>Name</th>
        <th>Email</th>
        <th>Subject</th>
        <th>Content</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @tickets.each do |ticket| %>
        <tr>
          <td><%= ticket.id %></td>
          <td><%= ticket.name %></td>
          <td><%= ticket.email %></td>
          <td><%= ticket.subject %></td>
          <td><%= ticket.content %></td>
          <td><%= ticket.ticket_status %></td>
          <td>
            <%= link_to 'Edit', edit_ticket_path(ticket), class: 'btn btn-primary btn-sm' %>
            <%= link_to 'Delete', ticket_path(ticket), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
