<%# app/views/tickets/new.html.erb %>
<h1 class="mb-4">New Ticket</h1>

<div class="container ml-4 mr-4">
  <%= form_with(model: @ticket, url: tickets_path, method: :post) do |form| %>
    <div class="mb-3">
      <%= form.label :name, class: 'form-label' %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>
    <div class="mb-3">
      <%= form.label :email, class: 'form-label' %>
      <%= form.email_field :email, class: 'form-control' %>
    </div>
    <div class="mb-3">
      <%= form.label :subject, class: 'form-label' %>
      <%= form.text_field :subject, class: 'form-control' %>
    </div>
    <div class="mb-3">
      <%= form.label :content, class: 'form-label' %>
      <%= form.text_area :content, class: 'form-control' %>
    </div>
    <%= form.submit 'Create Ticket', class: 'btn btn-primary' %>
  <% end %>
</div>

