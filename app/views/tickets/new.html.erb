<h1>Create New Ticket</h1>

<%= form_with model: @ticket, url: tickets_path, local: true do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>
  <div>
    <%= form.label :subject %>
    <%= form.text_field :subject %>
  </div>
  <div>
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>
  <div>
    <%= form.submit 'Create Ticket' %>
  </div>
<% end %>

