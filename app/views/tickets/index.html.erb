<h1 class="mb-4">Tickets</h1>

<div class="table-responsive">
  <table class="table table-striped table-bordered">
    <thead class="table-dark">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Status</th>
        <th>Subject</th>
        <th>Content</th>
      </tr>
    </thead>
    <tbody>
      <% @tickets.each do |ticket| %>
        <tr>
          <td><%= ticket.name %></td>
          <td><%= ticket.email %></td>
          <td><span class="badge bg-primary"><%= ticket.ticket_status %></span></td>
          <td><%= ticket.subject %></td>
          <td><%= ticket.content %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to 'New Ticket', new_ticket_path, class: 'btn btn-primary mt-3' %>

